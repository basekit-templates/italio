
{% extends "layout.twig" %}

{% block content %}
<div class="bk-pt-default">
    <header class="bk-header">
        <div class="wrapper clearfix">
            <div class="companyheader clearfix">
                {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
            </div>
                {{widget('extendednavigation', 'navigationheader', {"align":"right"})|raw}}
        </div>
    </header>
    
    <div class="headerprofile wrapper clearfix">
        <div class="header-left">
            {{widget('profile', 'headercolumn1profilePhone', { 'profileType':'phone', 'phone':'profile'})|raw}} 
        </div>
        <div class="header-center">
            {{widget('content', 'headercolumn1content', {content: 'This is a content widget.', lines: 'all'})|raw}}
        </div>
        <div class="header-right">
            {{widget('profile', 'headercolumn1socialicons', { 'profileType' : 'socialicons' })|raw}}
        </div>
    </div> 
    
    <div class="wrapper clearfix">
        {{zone('main')|raw}}
    </div>
    
    <footer class="bk-footer">
    </footer>

</div>

{% endblock %}